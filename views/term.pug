html
    head
        script
            include script.js
        style
            include style.css
        title Render HTML using PUG
    body
        h1="Spanish: " + word
            button(onclick=`skip("${word}",  "${part}")`)="skip"
            button(onclick=`nextPage()`)="load next page"
            form(onsubmit="return loadPageByTranslation()")
                input(name="termInput")
                button(onclick=`loadPageByTranslation()`)="load by translation"
        h2="English: " + translation
        h3="Part of speech: " + part
        h3="Example: " + example
        h4=`(${index} / ${total})`
        if images.length === 0
            span(class="no-image-placeholder") No images were found. Try the next page!
        for image in images
            img(src=image onclick=`selectImage("${word}",  "${part}", "${image}")`)